head
    title Ansökning
    link(rel='stylesheet', href='/stylesheets/style2.css')
body
  div(id="flex2") 
    div
      input(type="button", value="tillbaka", id="tillbaka", onclick="window.location.href='http://localhost:3000/nybokning'")
  div(id="flex")
    div(id="box1")
      h1 Kundinformation
    div(id="box2")
      form(action="/kvitto" method="POST")
        p Email
        input(name="email" id="email", type="text",)
        p Förnamn
        input(name="fornamn" id="fornamn", type="text")
        p Efternamn
        input(name="efternamn" id="efternamn", type="text")
        p Telefonnummer
        input(name="tlf" id="tlf", type="text")
        p Körkortsnummer/personnummer
        input(name="personnummer" id="personnummer", type="text")
        p Land
        select
          option(value="Sverige")
            p Sverige
          option(value="Norge")
            p Norge
          option(value="Danmark")
            p Danmark
          option(value="Finland")
            p Finland
            input(name="id" id="hidden" value=id)
          input(type="submit", value="Boka", id="bokning")
    div(id="flexbox")
      h3 #{märke}
        p Fordonstyp: #{fordonstyp}
        p Körkort: #{korkort}
        p Märke: #{marke}
        p Växellåda: #{vaxellada}
        p Modell: #{modell}
        p Årsmodell: #{arsmodell}
        p Dagshyra: #{dagshyra}
        
 
        
      